/* components/squareList_sp/squareListSp.wxss */
.squ_ctn {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.squ_unit_ctn {
  width: 108rpx;
  height: 108rpx;
  border: 1rpx solid #e2e2e1;
  margin: 10rpx;
  border-radius: 10rpx;
}
.squ_unit_icon {
  height: 70%;
}
.squ_unit_icon_img {
  height: 100%;
  width: 100%;
}
.squ_unit_text {
  height: 29%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.squ_unit_text_value {
  width: 108rpx;
  color: black;
  font-size: 20rpx;
  text-align: center;
}
.squ_unit_tag_ctn {
  width: 30rpx;
  height: 60rpx;
  position: absolute;
}
.squ_unit_tag_img {
  width: 100%;
  height: 100%;
}