.logo-container {
  display: flex;
  margin: 10rpx;
  border-width: 0px;
  border-color: transparent;
  border-style: solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  box-shadow: 1rpx 1rpx 6rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.logo-img {
  width: 100%;
  height: 150rpx;
}

.top-right {
  position: absolute;
  top: 0;
  right: 0;
}