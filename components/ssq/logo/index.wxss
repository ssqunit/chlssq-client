.logo-container {
  display: flex;
  margin: 15rpx;
  border-width: 0px;
  border-color: transparent;
  border-style: solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  box-shadow: 1rpx 1rpx 6rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.logo-img {
  width: 100%;height: 150rpx;border-radius: 6rpx;
}

.top-right {
  position: absolute;
  top: 0;
  right: 0;
}

.bottom{
  position: absolute;bottom: 0;
}
.txtbg{
  height: 40rpx;width: 100%;background-color: black;opacity: 0.3;
}
.txt{
  width:100%;font-size: 22rpx;color:white;text-align: center;
}