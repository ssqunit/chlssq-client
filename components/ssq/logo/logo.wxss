.logo-container {
  display: flex;
  margin: 5px;
  border-width: 0px;
  border-color: transparent;
  border-style: solid;
  border-radius: 3px;
  box-sizing: border-box;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
  position: relative;
}

.logo-img {
  width: 100%;
  height: 75px;
}

.top-right {
  position: absolute;
  top: 0;
  right: 0;
}