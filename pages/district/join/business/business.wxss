/* pages/district/join/business/business.wxss */
.container {width: 100%;height: 100%;overflow: hidden;display: flex;flex-direction: column;align-items: center;}

.ssqinfo_ctn{width: calc(100% - 40rpx);margin-left: 10rpx;height: 220rpx;display: flex;flex-direction: row;margin-top: 20rpx;border: 1rpx solid sandybrown;border-radius: 10rpx;padding: 5rpx;}
.ctn_img{width: calc(100% - 300rpx);height: 100%;}
.ctn_img image{width: 100%;height: 100%;border-radius: 10rpx;}
.ctn_info{width: 300rpx;height: 100%;display: flex;flex-direction: column;padding-left: 10rpx;}
.info_name{font-size: 36rpx;display: flex;flex-direction: row;align-items: center;}
.name_icon{width: 30rpx;height: 30rpx;}
.info_area{font-size: 24rpx;margin-top: 10rpx;}
.info_dis{font-size: 24rpx;margin-top: 10rpx;}

.contents_info{width:100%;height: auto;display: flex;flex-direction: column;}
.contents_info .ctn_way{font-size: 32rpx;margin-top: 20rpx;padding-left: 20rpx;}
.contents_info .ctn_info{
  width: 100%;height: auto;display: flex;flex-direction: column;
  padding-left: 40rpx;
}

.info_opmsg{font-size: 28rpx;height:auto;width:100%;}
.info_item{display: flex;flex-direction: row;align-items: center;margin-top: 10rpx;}
.info_star{width: 10rpx;color:red;}
.info_tag{width: 160rpx;}
.info_item input{width: calc(100% - 270rpx);border: 1rpx solid silver;border-radius: 10rpx;padding: 0 10rpx;}
.info_item textarea{width: calc(100% - 270rpx);height: 100rpx;border: 1rpx solid silver;border-radius: 10rpx;padding: 5rpx 10rpx;}
.optype{width:200rpx;height: 35rpx;border:1rpx solid silver;font-size: 24rpx;}

.info_imginfo{font-size: 28rpx;height: auto;width:100%;margin-top: 10rpx;}
.info_imginfo .uploadtxt{text-decoration-line: underline;color: blue;}
.myimg{width: 100%;height: 200rpx;}

.comitbtn{margin-top: 10rpx;margin-bottom: 50rpx; width: 90%;background-color: green;margin-left: 5%;color: white;}
.info_space{width: 100%;height: 30rpx;}
.line_space{width: calc(100% - 80rpx);height: 2rpx;background-color: silver;margin-top: 15rpx;margin-bottom: 15rpx;}
.tips{font-size: 28rpx;color: silver;padding-left: 40rpx;padding-right: 40rpx;}
.curpos{font-size: 24rpx;padding-left: 15rpx;color: silver;}
.clickText{color: blue;margin-left: 30rpx;}

checkbox-group{font-size: 32rpx;margin-top: 30rpx;margin-bottom: 10rpx;}
.agreeText{text-decoration-line: underline;}
.agree_ctn{width: 600rpx;height: auto;display: flex;flex-direction: column;font-size: 26rpx;margin-top:20rpx;margin-bottom: 20rpx;}
.agree_title_ctn{width: 100%;height: auto;display: flex;flex-direction: column;align-items: center;}
.agree_title{font-size: 32rpx;}
.scroll-view{width: 100%;height:800rpx;display: flex;flex-direction: column;}
.agree_text{width: 92%;margin-left:4%;height: auto;}
