<!--pages/district/join/join.wxml-->
<view class="container">

  <view class="ssqinfo_ctn">
    <view class="ctn_img">
      <image src="{{ssqInfo.imageUrl}}" data-src="{{ssqInfo.imageUrl}}" bindtap="previewImage"></image>
    </view>
    <view class="ctn_info">
      <view class="info_name">
        <image class="name_icon" mode="aspectFit" src="../../../static/icons/favorite_r.png"></image>
        <text class="name_txt">{{ssqInfo.name}}</text>
      </view>
      <text class="info_area">{{ssqInfo.area}}</text>
      <text class="info_dis">距离：{{ssqInfo.distance}}km</text>
    </view>
  </view>

  <van-toast id="van-toast" />
  <view class="contents_info">
    <text class="ctn_des">欢迎入驻,入驻方式说明：</text>
    <text class="ctn_des">>成员：可以预约该商圈的相关产品或服务</text>
    <text class="ctn_des">>个人：可以给商圈用户提供小规模的产品或服务</text>
    <text class="ctn_des">>商家：有营业执照，可以给商圈提供全方位的产品或服务</text>
    <view class="ctn_btns">
      <button bindtap="joinApply" data-type="1">成员快速加入</button>
      <button bindtap="joinApply" data-type="2">申请商家入驻</button>
      <button bindtap="joinApply" data-type="3">申请个人入驻</button>
      <!-- <button bindtap="buySsqAD">购买商圈广告</button> -->
    </view>
  </view>
</view>



