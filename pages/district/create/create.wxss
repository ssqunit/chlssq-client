/* pages/district/create/create.wxss */
.ctn {width: 96%;margin-left: 2%;}
.web_title {font-size: 32rpx;}
.line {width: 100%;height: 1rpx;background-color: #ff9800;margin-top: 10rpx;margin-bottom: 10rpx;}
.img_ctn{width: 100%;height: 240rpx;background-color: #ff9800;padding: 5rpx;}
.img{height: 100%;width: 100%;}
.upload_btn{width: 100%;display: flex;flex-direction: column;align-content: center;}
.upload_txt{width: 100%;text-align: center;font-size: 28rpx;color:blue;text-decoration-line:underline;}
.cho_area{width:100%;height: 60rpx;display: flex;flex-direction: row;align-items: center;font-size: 28rpx;margin:10rpx 0rpx;}
.pickbtn{margin-left: 10rpx;color:blue;text-decoration-line: underline;}
.cho_area_txt{margin-left: 20rpx;}
