<!--pages/admin/audit/perapply/perapply.wxml-->
<view class="container">

  <view class="welcom">
    <text class="title">SSQ管理后台--个人入驻</text>
    <text class="name">欢迎：{{nickName}}</text>
  </view>
  <view class="line"></view>

  <view class="main_ctn">
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">名字：{{perJoinInfo.name}}</text>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">经营信息：</text>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_space"></view>
        <text class="item_text">{{perJoinInfo.optext}}</text>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">地址：{{perJoinInfo.addr}}</text>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">联系：{{perJoinInfo.contact}}</text>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">入驻：{{joinSsqInfo.area}}{{joinSsqInfo.name}}社圈</text>
        <image src="../../../../static/icons/map_r.png" mode="aspectFit" bindtap="showOnMap" data-latitude="{{joinSsqInfo.latitude}}" data-longitude="{{joinSsqInfo.longitude}}"></image>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">资料证照:</text>
      </view>
      <view class="item_img">
        <view class="short_space"></view>
        <image src="{{perJoinInfo.img}}" mode="aspectFit" bindtap="previewImage" data-src="{{perJoinInfo.img}}"></image>
        <image src="{{perJoinInfo.cimg}}" mode="aspectFit" bindtap="previewImage" data-src="{{perJoinInfo.cimg}}"></image>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <text class="item_text">审核意见：</text>
      </view>
      <view class="item_msg">
        <textarea bindinput="onDes"></textarea>
      </view>
    </view>
    <view class="item_ctn">
      <view class="item_title">
        <view class="short_line"></view>
        <button type="warn" bindtap="onDell" data-type="2">驳回</button>
        <button type="primary" bindtap="onDell" data-type="1">通过</button>
      </view>
    </view>

  </view>

</view>

