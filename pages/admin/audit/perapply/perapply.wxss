/* pages/admin/audit/perapply/perapply.wxss */
.container{width: 96%;margin-left: 2%;height: auto;}
.welcom{width: 100%;height: auto;display: flex;flex-direction: row;margin-top: 20rpx;}
.welcom .title{font-size: 32rpx;width: 60%;height: 100%;}
.welcom .name{font-size: 24rpx;width: 40%;height: 100%;padding-top: 8rpx;text-align: right;}
.line{width: 100%;height: 2rpx;background-color: silver;margin-top: 5rpx;margin-bottom: 10rpx;}

.main_ctn{width: 96%;margin-left: 2%;height: 100%;display: flex;flex-direction: column;border: 4rpx solid white;border-left-color: silver;}

.item_ctn{width: 100%;height: auto;display: flex;flex-direction: column;}
.item_title{width: 100%;height: auto;display: flex;flex-direction: row;align-items: center;margin-top: 5rpx;margin-bottom: 5rpx;}
.item_title image{width: 40rpx;height: 40rpx;}
.short_line{width: 50rpx;height: 4rpx;background-color: silver;}
.item_text{font-size: 28rpx;margin-left: 10rpx;}
.item_img{width: 92%;margin-left: 4%;height: auto;}
.item_img image{width: 100%;height: 260rpx;}
.item_msg{width: 92%;margin-left: 4%;height: auto;}
.item_msg textarea{width: 100%;height: 120rpx;border: 1rpx solid silver;border-radius: 10rpx;padding: 5rpx;}
.item_title button{margin-top: 20rpx;}
.list_ctn{width: 96%;margin-left: 2%;height: auto;}
.short_space{width: 50rpx;height: 4rpx;}
.ssqinfo{margin-top: 15rpx;}