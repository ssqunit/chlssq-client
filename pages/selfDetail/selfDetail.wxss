/* pages/selfDetail/selfDetail.wxss */
.sel_avatar_ctn {
  width: 100%;
  height: 260rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sel_avatar_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  background-color: rgb(219, 219, 243);
}
.sel_user_name {
  height: 39rpx;
  color: black;
  font-size: 32rpx;
  padding-top: 5rpx;
}
.sel_info_ctn {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid white;
  border-bottom-color: black;
}
.sel_info_ctn_txt {
  width: 100%;
  font-size: 26rpx;
  margin-top: 10rpx;
  margin-bottom:5rpx;
}
.sel_info_ssq_ctn {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.sel_info_ssq {
  width: 100%;
  height: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0rpx 10rpx 0rpx;
}
.ssq_pos_img {
  width: 48rpx;
  height: 48rpx;
  background-color: black;
  border-radius: 10rpx;
}
.ssq_pos_name {
  font-size: 26rpx;
  margin-left: 10rpx;
}
.ssq_pos_btn {
  height: 35rpx;
  width: 90rpx;
  font-size: 20rpx;
  color:white;
  border: 1rpx solid rgb(247, 164, 164);
  border-radius: 10rpx;
  margin-left: 10rpx;
  background-color: rgb(247, 164, 164);
}
.sel_info_about_ssq {
  width: 70%;
  height: 56rpx;
  border-radius: 10rpx;
  border:1rpx solid gray;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}
