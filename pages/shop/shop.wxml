<!--pages/district/shop/shop.wxml-->
<view class="container">

  <!-- 商家名称 -->
  <view class="shop_name">
    <view class="name_img">
      <image src="{{shopInfo.ssqImgUrl}}"></image>
    </view>
    <view class="name_name">
      <text class="name_value">{{shopInfo.name}}</text>
      <text class="name_ssq">{{shopInfo.ssqinfo[0].area}}  {{shopInfo.ssqinfo[0].name}}  社圈</text>
    </view>
    <view class="name_km" bindtap="openPosition">
      <image src="../../static/icons/map_b.png" mode="aspectFit"></image>
      <text>{{shopkm}}km</text>
    </view>
  </view>
  <view class="space_line"></view>

  <!-- 产品SWIPER -->
  <view class="swiper_imgctn">
    <swiper class="fullwh" autoplay='true' interval='3000' duration='500' circular='true' indicator-dots="true">
      <block wx:for="{{shopInfo.hightlight}}" wx:for-index="index">
        <swiper-item class="fullwh">
          <image src='{{item.img}}' class='fullwh' mode='aspectFit' data-id="{{item.productid}}" bindtap="onHightlightImg"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="blank_space"></view>

  <!-- 商家信息 -->
  <view class="info_item fullwh">
    <text class="item_tag">经营范围：</text>
    <text class="item_value">{{shopInfo.optext}}</text>
  </view>
  <view class="blank_space"></view>
  <view class="info_item fullwh">
    <text class="item_tag">电话：</text>
    <text class="item_value">{{shopInfo.contact}}</text>
  </view>
  <view class="blank_space"></view>
  <view class="info_item fullwh">
    <text class="item_tag">地址：</text>
    <text class="item_value">{{shopInfo.addr}}</text>
  </view>
  <view class="blank_space"></view>

  <!-- 产品信息 -->
  <view class="list_tag fullwh">
    <text>产品/服务列表：(数量18)</text>
  </view>
  <view class="space_line"></view>

  <view class="list_ctn fullwh">
    <scroll-view>
      <block wx:for="{{shopInfo.product_list}}" wx:for-index="index">
        <ssq-product-my product="{{item}}" hideFooter="true" bind:onCardClick="onCardClick" />  
      </block>
    </scroll-view>
  </view>


</view>