/* pages/district/shop/shop.wxss */
.container{width: 96%;height: auto;margin-left: 2%;padding-top: 20rpx;}
.fullwh{width: 100%;height: 100%;}
.shop_name{width: 100%;height: 80rpx;display: flex;flex-direction: row;align-items: center; }
.name_km{height: 100%;width: 100rpx;font-size: 20rpx;display: flex;flex-direction: column;align-items: center;}
.name_km image{width: 60rpx;height: 60rpx;}
.name_img{width: 80rpx;height: 80rpx;}
.name_img image{width: 100%;height: 100%;border-radius: 50%;}
.name_name{height: auto;width: calc(100% - 180rpx);margin-left: 10rpx;display: flex;flex-direction: column;}
.name_value{font-size: 32rpx;}
.name_ssq{font-size: 20rpx;}
.space_line{width: 100%;height: 2rpx;background-color: gainsboro;margin-top: 5rpx;margin-bottom: 5rpx;}
.swiper_imgctn{width: 100%;height: 260rpx;}
.blank_space{width: 100%;height: 10rpx;}
.info_item{font-size: 22rpx;display: flex;flex-direction: row;color: rgb(122, 121, 121);}
.item_tag{width: 130rpx;height: auto;}
.item_value{width:calc(100% - 130rpx);height: auto;}
.list_tag{font-size: 28rpx;}
.t_space{margin: 5rpx;}

.person_ctn{width: 100%;height: auto;display: flex;flex-direction: row;margin-top: 15rpx;margin-bottom: 15rpx;}
.p_left{width: 280rpx;height: 500rpx;border: 1rpx solid sandybrown;border-radius: 10rpx;}
.p_left image{width: 98%;height: 98%;margin: 1%;}
.p_right{width: calc(100% - 280rpx);height: auto;display: flex;flex-direction: column;}
.p_name{font-size: 40rpx;width: 92%;margin-left:4%}
.p_ssq{font-size: 20rpx;width: 92%;margin-left: 4%;}
.p_item{width:92%;margin-left:4%;font-size: 24rpx;display: flex;flex-direction: row;margin-top: 10rpx;}
.p_tag{width: 120rpx;height: auto;}
.p_value{width:calc(100% - 120rpx);height: auto;}
.p_item image{width: 100rpx; height: 140rpx;}
.share_btn{height: 70rpx;display: flex;flex-direction: row;align-items: center;color: rgb(128, 127, 127);font-size: 26rpx;margin-right: 1rpx;margin-top: 70rpx;}
.share_btn image{width:50rpx; height: 50rpx;margin-right: 15rpx;}

