/* pages/my/my.wxss */

.user_info{width: 100%;height: auto;display: flex;flex-direction: column;background-color: #cf6f00;color:white;}
.info_time{width: 100%;height: auto;display: flex;flex-direction: row;}
.time_text{width:240rpx;margin-left: calc(100% - 260rpx); height:auto;font-size: 26rpx;}
.info_main{width: 100%;height: auto;display: flex;flex-direction: row;align-items: center;}
.main_avatar{width: 68rpx;height: 68rpx;border-radius: 50%;margin:0rpx 10rpx;border:1rpx solid snow;}
.main_nickname{font-size: 42rpx;}

.b_b{width: 100%;height: 30rpx;background-color: #cf6f00;padding-top: 10rpx;}
.b_n{width: calc(100% - 4rpx);margin-left:2rpx;height: 20rpx;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;background-color: white;margin-top: 10rpx;}
.b_d{width: 100%;height: 40rpx;background-color: #cf6f00;padding-bottom: 10rpx;}
.b_u{width: calc(100% - 4rpx);margin-left:2rpx;height: 20rpx;border-bottom-left-radius: 20rpx;border-bottom-right-radius: 20rpx;background-color: white;margin-bottom: 10rpx;}

.container{
  width: 96%;height: auto;margin-left: 2%;overflow: hidden;
}

.shop_name{width: 100%;height: 110rpx;display: flex;flex-direction: row;align-items: center; margin-top: 15rpx;}
.name_km{height: 100%;width: 100rpx;font-size: 20rpx;display: flex;flex-direction: column;align-items: center;}
.name_km image{width: 40rpx;height: 40rpx;margin-top: 30rpx;}
.name_img{width: 100rpx;height: 100rpx;}
.name_img image{width: 100%;height: 100%;border-radius: 10rpx;}
.name_name{height: auto;width: calc(100% - 180rpx);margin-left: 10rpx;display: flex;flex-direction: column;}
.name_value{font-size: 32rpx;}
.name_ssq{font-size: 20rpx;}
.space_line{width: 100%;height: 2rpx;background-color: gainsboro;margin-top: 5rpx;margin-bottom: 5rpx;}

.shop_detail{width: 100%;height: auto;display: flex;flex-direction: row;margin: 15rpx 0rpx;}
.detail_left{width: calc(100% - 2rpx);}
.detail_right{width: 2rpx;height: 200rpx;}
.detail_right image{width: 100%;height: 100%;}
.shop_sum{width: 100%;height: auto;display: flex;flex-direction: column;font-size: 24rpx;}
.sum_item{width: 100%;height: auto;display: flex;flex-direction: row;}
.sum_item_left{width:50%;height: auto;display: flex;flex-direction: row;}
.sum_item_right{width: 49%;height: auto;display: flex;flex-direction: row;}
.sum_item_tag{width: 120rpx;}
.sum_item_value{width: calc(100% - 120rpx);}

.null_info{width: calc(100% - 20rpx);height: 280rpx;font-size: 32rpx;display: flex;flex-direction: column;margin: 20rpx;}


.ad_info{width: 100%;height: 55rpx;font-size: 28rpx;display: flex;flex-direction: row;}
.ad_count{width: calc(100% - 50rpx);}
.ad_btn{width:50rpx;text-align: right;color:blue;}

.products{width: 100%;height: auto;}
.pro_info{width:100%;height: auto;display: flex;flex-direction: row;}
.pro_info_left{width: calc(100% - 200rpx);height: auto;display: flex;flex-direction: column;}
.pro_title{font-size: 28rpx;}
.pro_des{font-size: 20rpx;margin-left: 30rpx;}
.pro_info_right{width: 200rpx;height: auto;display: flex;flex-direction: column;}
.pro_list{width: 100%;height: auto;}
.plus{font-size: 32rpx;margin-top: 5rpx;}
.plus_txt{font-size: 24rpx;color: rgb(116, 116, 116);}
.t_space{margin: 5rpx;}
.bottom_space{width: 100%;height: 100rpx;}

.adType_ctn{width: 100%; height: 100%;}
.tagsctn{display: flex;flex-direction: row;}

.person_ctn{width: 100%;height: auto;display: flex;flex-direction: row;margin-top: 15rpx;margin-bottom: 15rpx;}
.p_left{width: 280rpx;height: 500rpx;border: 1rpx solid sandybrown;border-radius: 10rpx;overflow: hidden;}
.p_left image{width: 98%;height: 98%;margin: 1%;border-radius: 10rpx;}
.p_right{width: calc(100% - 280rpx);height: auto;display: flex;flex-direction: column;}
.p_name{font-size: 40rpx;width: 96%;margin-left:2%}
.p_ssq{font-size: 20rpx;width: 96%;margin-left: 2%;}
.p_item{width:96%;margin-left:2%;font-size: 24rpx;display: flex;flex-direction: row;margin-top: 10rpx;}
.p_tag{width: 120rpx;height: auto;}
.p_value{width:calc(100% - 120rpx);height: auto;}
.p_item image{width: 100rpx; height: 140rpx;}
.share_btn{width:150rpx; height: 50rpx;display: flex;flex-direction: row;align-items: center;color: rgb(128, 127, 127);font-size: 20rpx;margin-right: 1rpx;}
.share_btn image{width:30rpx; height: 30rpx;margin-right: 15rpx;}

.ctn_stars{height: auto;width: calc(100% - 120rpx);display: flex;flex-direction: row;}
.shop_star{width: 25rpx!important;height: 25rpx!important;margin: 5rpx;}
